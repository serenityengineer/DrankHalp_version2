<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b1b17"
        tools:context=".MainActivity">

    <Button
            android:text="@string/button_TACOS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTacos" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            android:textSize="72sp"
            android:textColor="#ffffff"
            android:background="#6a287e"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/buttonBurgers"/>
    <Button
            android:text="@string/button_PIZZA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBurgers" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            android:textColor="#ffffff"
            android:background="#6a287e"
            android:textSize="72sp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/buttonPizza"/>
    <Button
            android:text="@string/button_BURGERS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPizza" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            android:textSize="72sp"
            android:textColor="#ffffff"
            android:background="#6a287e"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/buttonAsian"/>
    <Button
            android:text="@string/button_ASIAN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAsian" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="24dp"
            android:textColor="#ffffff"
            android:background="#6a287e"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="72sp"/>
    <TextView
            android:text="@string/string_foodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodtypeTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:textColor="#ffffff"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="32sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonTacos"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/foodtypeTextView"
            android:visibility="visible" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>